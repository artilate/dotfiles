#Prompt
PS1="%F{#ebbcba}%B%~/%b%f "

#Exports 
export PATH="$HOME/.local/bin/:$PATH"

# Aliases
alias ls='ls --color=auto'
alias cd..="cd .."
alias py='python'
alias vi='nvim'
# History
HISTSIZE=500
SAVEHIST=1000
HISTFILE=.cache/zsh_history

# Tab completion
autoload -U compinit
zstyle ':completion:*' menu select
zmodload zsh/complist
compinit
_comp_options+=(globdots)

